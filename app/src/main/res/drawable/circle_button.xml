<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="oval">

            <solid android:color="@color/shutterButtonOuterCircleColor" />
            <stroke
                android:width="6dp"
                android:color="@color/shutterButtonCornerColor" />
            <size
                android:width="100dp"
                android:height="100dp" />

            <corners android:radius="20dp" />

        </shape>

    </item>
    <item
        android:bottom="22dp"
        android:left="22dp"
        android:right="22dp"
        android:top="22dp">

        <shape android:shape="oval">
            <solid android:color="@color/shutterButtonInnerCircleColor" />
            <size
                android:width="20dp"
                android:height="10dp" />
        </shape>

    </item>
</layer-list>