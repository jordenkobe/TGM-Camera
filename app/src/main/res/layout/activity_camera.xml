<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="me.maxdev.tgmcamera.CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="100dp" />

        <View
            android:id="@+id/blocking_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorToolbar" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/button_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_switch"
            android:layout_below="@+id/button_take_picture"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/button_take_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle_button" />

        <ImageButton
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/button_take_picture"
            android:src="@drawable/btn_done"
            android:background="@color/colorTransparent"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_take_picture"
            android:src="@drawable/button_cancel"
            android:background="@color/colorTransparent"
            android:visibility="invisible" />

        <!--<me.maxdev.tgmcamera.widget.ShutterButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="68dp" /> -->

    </RelativeLayout>

</FrameLayout>
